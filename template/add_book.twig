{% extends "layout.twig" %}

{% block content %}
    <h1>Добавление новой книги</h1>
    <h4>Заполните информацию о книге</h4>
    <form enctype="multipart/form-data" action="http://localhost/php/response_add_book.php" method="POST" class="form-horizontal">
      <div class="form-group">
        <div class="col-sm-4">
          <input name="title" type="text" placeholder="Название" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="author" type="text" placeholder="Автор" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <select name="genre" type="text" placeholder="Жанр" class="form-control">
            <option selected="selected" value="0">Выбирите жанр</option>
            {% for e in all_genres %}
                <option value="{{e.genre_id}}">{{e.genre_ru}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="print_date" type="date" placeholder="Год издания" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="add_info" type="text" placeholder="Дополнительная информация" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="description" type="text" placeholder="Краткое описание" class="form-control"/>
        </div>
      </div>
      <!-- Поле MAX_FILE_SIZE должно быть указано до поля загрузки файла -->
      <input type="hidden" name="MAX_FILE_SIZE" value="3000000" />
      <!-- Название элемента input определяет имя в массиве $_FILES -->
      <div class="form-group">
        <div class="col-sm-4">
          <label class="label_upload_image">
            <div id="previewImageId"></div>
            <input id="previewInputId" name="cover" type="file">
          </label>
          <p class="help-block">Выбирите обложку для книги.</p>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Добавить книгу</button>
    </form> 

{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="http://localhost/content/css/add_book.css">
{% endblock %}

{% block scripts %}
    <script src="http://localhost/content/js/add_book.js"></script>
{% endblock %}

