{% extends "layout.twig" %}

{% block content %}
    <h1>Добавление новой книги</h1>
    <h4>Заполните информацию о книге</h4>
    <form enctype="multipart/form-data" action="http://localhost/php/response_add_book.php" method="POST" class="form-horizontal center-block">
      <!-- Поле MAX_FILE_SIZE должно быть указано до поля загрузки файла -->
      <input type="hidden" name="MAX_FILE_SIZE" value="3000000"/>
      <!-- Название элемента input определяет имя в массиве $_FILES -->
      <div class="form-group pull-left">
        <div class="col-sm-12">
          <label class="label_upload_image">
            <div id="previewImageId"></div>
            <input id="previewInputId" name="cover" type="file">
          </label>
          <p class="help-block">Выберите обложку для книги.</p>
        </div>
      </div>
      <div class="descr">
        <div class="form-group">
          <div class="col-sm-8">
            <input name="title" type="text" placeholder="Название" class="form-control" required/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <input name="author" type="text" placeholder="Автор" class="form-control" required/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <select name="genre" type="text" placeholder="Жанр" class="form-control" required>
              <option selected="selected" value="0">Выберите жанр</option>
              {% for e in all_genres %}
                  <option value="{{e.genre_id}}">{{e.genre_ru}}</option>
              {% endfor %}
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2">
            <input name="print_date" type="date" placeholder="Год издания" class="form-control" required/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <input name="add_info" type="text" placeholder="Дополнительная информация" class="form-control" required/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <textarea name="description" type="text" placeholder="Краткое описание" class="form-control" required></textarea>
          </div>
        </div>
      </div>
      <div class="clear"></div>
      <button type="submit" class="btn btn-default add_book_btn">Добавить книгу</button>
    </form> 

{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="http://localhost/content/css/add_book.css">
{% endblock %}

{% block scripts %}
    <script src="http://localhost/content/js/add_book.js"></script>
{% endblock %}

