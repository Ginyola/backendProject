<div class="table-responsive">
  <table class="table table-hover user_books_table" cellpadding="5">
    <tr class="user_books_table_row">
      <th class="user_books_table_number"> № </th>
      <th class="user_books_table_cell"> Название книги </th>
      <th class="user_books_table_cell"> Дата добавления </th>
      <th class="user_books_table_cell"> Статус </th>
    </tr>
    {% for i in user_books %}
        <tr class="user_books_table_row">
          <td>{{ loop.index }}</td>
          <td><a href="http://localhost/php/book.php?id={{i.book_id}}">{{i.title}}</td>
          <td>{{i.add_date}}</td>
          <td>
            {% if i.offer == 1 %}
                <form onsubmit="ReloadPage();" action="http://localhost/php/change_book_status.php" method="post">
                  <input type="hidden" name="id" value="{{i.book_id}}">
                  <button type="submit" name="offer" value="0" class="btn-link">Книга свободна</button>
                </form>
            {% else %}
                <form onsubmit="ReloadPage();" action="http://localhost/php/change_book_status.php" method="post">
                  <input type="hidden" name="id" value="{{i.book_id}}">
                  <button type="submit" name="offer" value="1" class="btn-link">Книга занята</button>
                </form>
            {% endif %}
          </td>
        </tr>
    {% endfor %}
  </table>
</div>