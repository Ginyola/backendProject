{% extends "layout.twig" %}

{% block content %}
    {% for a in book %}
    <h1>Изменение книги</h1>
    <h4>Информация о книге</h4>
    <form enctype="multipart/form-data" action="http://localhost/php/response_change_book.php" method="POST" class="form-horizontal">
      <div class="form-group">
        <div class="col-sm-4">
          <input name="title" type="text" placeholder="Название" class="form-control" value="{{a.title}}"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="author" type="text" placeholder="Автор" class="form-control" value="{{a.author}}"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <select name="genre" type="text" placeholder="Жанр" class="form-control">
            <option selected="selected" value="{{a.genre_id}}">Выбирите жанр</option>
            {% for e in all_genres %}
                <option value="{{e.genre_id}} ">{{e.genre_ru}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="print_date" type="date" placeholder="Год издания" class="form-control" value="{{a.print_date}}"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="add_info" type="text" placeholder="Дополнительная информация" class="form-control" value="{{a.add_info}}"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4">
          <input name="description" type="text" placeholder="Краткое описание" class="form-control" value="{{a.description}}"/>
        </div>
      </div>
      <!-- Поле MAX_FILE_SIZE должно быть указано до поля загрузки файла -->
      <input type="hidden" name="MAX_FILE_SIZE" value="3000000" />
      <!-- Название элемента input определяет имя в массиве $_FILES -->
      <div class="form-group">
        <div class="col-sm-4">
          <label class="label_upload_image">
            <div id="previewImageId" style="background-image: url('http://localhost/{{a.image}}');"></div>
            <input id="previewInputId" name="cover" type="file">
          </label>
          <p class="help-block">Изменить обложку для книги.</p>
        </div>
      </div>
            <input type="hidden" name="book_id" value="{{a.book_id}}">
      <button type="submit" class="btn btn-warning">Изменить</button>
    </form> 
    {% endfor %}

{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="http://localhost/content/css/add_book.css">
{% endblock %}

{% block scripts %}
    <script src="http://localhost/content/js/add_book.js"></script>
{% endblock %}

