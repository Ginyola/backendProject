<!DOCTYPE html>
<html>
  <head>
    {% include "head.twig" %}
    {% block head_block %}
    {% endblock %}
    {% block styles %}
    {% endblock %}
  </head>
  <body>
    {% include "header.twig" %}
    <div class="container">
      <div class="row">
        {% if genre is not empty%}
            <div class="col-xs-4 col-md-2 sidebar">
              {% include "sidebar.twig" %}
            </div>
            <div class="col-xs-14 col-md-10">
            {%else%}
                <div class="col-xs-18 col-md-12">
            {% endif %}
                {% include "info_messages.twig" %}
                {% block content %}
                {% endblock %}
                </div>
        </div>
        <div class="clear"></div>
        {% include "footer.twig" %}
      </div>
  </body>
  <script src="http://localhost/content/js/jquery.min.js"></script>
  <script src="http://localhost/content/js/bootstrap.min.js"></script>
  <script src="http://localhost/content/js/rateit.js"></script>
  <script src="http://localhost/content/js/main.js"></script>
  {% block scripts %}
  {% endblock %}
</html>