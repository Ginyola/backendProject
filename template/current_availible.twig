<div class="users_with_books">
  {% if owner is empty%}
  {% else %}
      {% for u in owner %}
          <div class="user_contact" id="user_{{u.user_id}}">
            <div class="owner_avatar center-block" style="background-image: url('http://localhost/{{u.avatar}}');"></div>
            <span>{{u.name}}</span>
            <input type="hidden" value="{{u.user_id}}">
          </div>
      {% endfor %}
  {% endif %}
</div>
<div id="userInfoWindow" class="user_info_window">
  <div id="replaceAjax">
  </div>
  <div id="closeUserInfo" class="close_user_info">X</div>
</div>