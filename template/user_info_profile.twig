<div>
  <h1>Личный кабинет:</h1>
  <form action="http://localhost/php/change_profile.php">
    <button class="avatar">
      <img src="http://localhost/{{user.avatar}}" alt="Ошибка загрузки аватара" class="img-rounded">
    </button>  
  </form>

  <div class="user_info">
    <h1>
      {% if role == 'admin' %}
          Администратор:
      {% else %} 
          Пользователь: 
      {% endif %}

      {% if user.name is empty %}
          {{user.login}}
      {% else %}
          {{user.name}}
      {% endif %}
    </h1>
    <div id="profileDataButton" class="btn btn-primary" style="margin-bottom: 5px;">
      Данные о себе
    </div>
    <ol id="profileData" class="list-group profile_data">
      <li class="list-group-item"><span>Email:</span> {{user.login}}</li>
      <li class="list-group-item"><span>Адрес:</span> {{user.address}}</li>
      <li class="list-group-item"><span>Контакт:</span> {{user.phone_number}}</li>
      <li class="list-group-item"><span>День рождения:</span> {{user.birthday}}</li>
      <li class="list-group-item"><span>Дата регистрации:</span> {{user.registration_time}}</li>
    </ol>
  </div>
  <div>
    <h2>Свои книги</h2>
    {% if user_books is empty %}
        <p>Нет книг</p>
    {% else %}
        {% include "table_books.twig" %}
    {% endif %}
  </div>  
  <form action="http://localhost/php/add_book.php">
    <button type="submit" class="btn btn-success add_book_button">Добавить книгу <span>+</span></button>
  </form>
</div>
